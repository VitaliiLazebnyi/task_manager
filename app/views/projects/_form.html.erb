<%= form_for(@project) do |f| %>
  <%= render 'common/errors', resource: @project %>

  <div class="field">
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  </div>

  <br />
  <div class="actions">
    <%= f.submit "#{ @project.new_record? ? 'Create' : 'Change' }", class: 'btn btn-success' %>
  </div>
<% end %>
