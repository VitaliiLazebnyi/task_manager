<h1><%= @project.title %></h1>

<% if @project.tasks.empty? %>
  <p>There's no Tasks in the Project.</p>
<% else %>
  <table class="table">
    <thead>
    <tr>
      <th width="200">Task</th>
      <th>Priority</th>
      <th>Deadline</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <%= render @project.tasks.by_priority %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Add new Task', new_project_task_path(@project), class: 'btn btn-primary btn-lg active' %>
<br />
<%= link_to 'Back', projects_path, class: 'btn btn-link' %>
